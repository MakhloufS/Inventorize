<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/room"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="40dp"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal"
        android:weightSum="100" >

        <sk.tuke.ursus.customViews.MyTextView
            android:id="@+id/roomName"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:singleLine="true"
            android:textColor="#FF000000"
            android:textSize="60dp" />

        <sk.tuke.ursus.customViews.MyTextView
            android:id="@+id/itemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="30dp" />

        <sk.tuke.ursus.customViews.MyTextView
            android:id="@+id/itemCountTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <!--
         <android.gesture.GestureOverlayView
			android:id="@+id/gestureOverlay" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<GridView android:id="@+id/gridview" android:layout_width="260dp"
				android:layout_height="wrap_content" android:numColumns="3"
				android:verticalSpacing="5dp" android:horizontalSpacing="5dp" />
			<ImageButton android:id="@+id/camera_button"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/camera_icon" android:background="@null" />
		</android.gesture.GestureOverlayView>
        -->

        <GridView
            android:id="@+id/gridview"
            android:layout_width="260dp"
            android:layout_height="fill_parent"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:verticalSpacing="5dp" />
        <!--
             	<ImageButton android:id="@+id/camera_button"
			    android:layout_marginTop="5dp"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@drawable/camera_icon" android:background="@null" />
        -->
    </LinearLayout>

</LinearLayout>